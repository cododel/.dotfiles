    {
      "host": "faceswaps.site-gpu",
      "args": [],
      "projects": [
        {
          "paths": [
            "/root/faceswap"
          ]
        }
      ]
    },
    {
      "host": "faceswaps.site",
      "args": [],
      "projects": []
    }
  ],
  "context_servers": {
    "openmemory": {
      "enabled": true,
      "command": "npx",
      "args": ["-y", "openmemory"],
      "env": {
        "OPENMEMORY_API_KEY": "om-5n1xwhw2nh46k5eil8jyveht83czuufn",
        "CLIENT_NAME": "cursor"
      }
    },
    "directus": {
      "enabled": true,
      "command": "npx",
      "args": ["@directus/content-mcp@latest"],
      "env": {
        "DIRECTUS_TOKEN": "a1IyQyCfM_56_HdKoNv-5yGtT5RFgt1z",
        "DIRECTUS_URL": "http://directus.fern-back.orb.local"
      }
    }
  },

  "terminal": {
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "project_panel": {
    "auto_fold_dirs": false
  },
  "file_types": {
    "jinja-html": ["**/templates/*/*.html", "**/templates/*"],
    "dotenv": [".env*"],
    "html": ["**/*.html"],
    "pip-requirements": ["**/requirements{/**,*}.{txt,in}"]
  },
  "linked_edits": true,
  "show_whitespaces": "all",
  "show_edit_predictions": true,
  "hard_tabs": false,
  "tab_size": 2,
  "confirm_quit": true,
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 0,
      "padding": 7,
      "min_column": 0,
      "show_commit_summary": false
    }
  },
  "vertical_scroll_margin": 5.0,
  "minimap": {
    "show": "never"
  },
  "cursor_blink": false,
  "base_keymap": "Cursor",
  "agent": {
    "enable_feedback": false,
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "inline_assistant_model": {
      "provider": "openrouter",
      "model": "x-ai/grok-code-fast-1"
    },
    "play_sound_when_agent_done": true,
    "default_model": {
      "provider": "openrouter",
      "model": "openai/gpt-5.1-codex-max"
    }
  },
  "vim_mode": true,
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  "ui_font_size": 15,
  "buffer_font_size": 13.0,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Kanagawa Dragon"
  }
}
